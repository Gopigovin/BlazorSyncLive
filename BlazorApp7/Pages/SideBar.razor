@page "/SideBar"

@using Syncfusion.EJ2.Blazor.DropDowns
@using Syncfusion.EJ2.Blazor.Navigations


<EjsSidebar>
    <ChildContent>
        <EjsAccordion>
            <AccordionItems>
                <AccordionItem Header="Choose Packages" Expanded="true">
                    <ContentTemplate>
                        <EjsDropDownList TValue="String" TItem="PackageList" Placeholder="Choose version" DataSource="@Package">
                            <DropDownListFieldSettings Text="Version" Value="Version"></DropDownListFieldSettings>
                            <DropDownListEvents TValue="String" ValueChange="OnPackageChange"></DropDownListEvents>
                        </EjsDropDownList>
                    </ContentTemplate>
                </AccordionItem>
                <AccordionItem Header="Examples" Expanded="true">
                    <ContentTemplate>
                        <EjsDropDownList TValue="String" TItem="ControlList" Placeholder="Choose Components" DataSource="@Controls">
                            <DropDownListFieldSettings Text="Control" Value="Control"></DropDownListFieldSettings>
                            <DropDownListEvents TValue="String" ValueChange="OnControlChange"></DropDownListEvents>
                        </EjsDropDownList>
                    </ContentTemplate>
                </AccordionItem>
            </AccordionItems>
        </EjsAccordion>
    </ChildContent>
</EjsSidebar>

<style>
    .e-sidebar.e-left {
        width: 250px !important;
        margin-top: 65px;
    }
</style>




